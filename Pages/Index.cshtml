@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12 text-center">
            <h1 class="display-6 mb-3">DropAI Control Center</h1>
            
            <div class="row">
                <!-- Reset All Button (Top Right) -->
                <div class="col-12 text-end mb-2">
                    <button class="btn btn-outline-danger btn-sm" id="btnResetAll" title="Xóa toàn bộ dữ liệu và khởi động lại như mới">
                        <i class="bi bi-trash"></i> Reset All
                    </button>
                </div>
                
                <!-- Left Sidebar: User Profile -->
                <div class="col-md-3">
                    <div id="userProfileCard" class="card border-primary mb-3 h-100">
                         <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center p-2">
                            <span class="small fw-bold">User Session</span>
                            <span class="badge bg-light text-primary" id="msgBadge">-</span>
                        </div>
                        <div class="card-body p-2">
                             <div class="mb-1">
                                <label class="text-muted small d-block">User Name</label>
                                <strong id="uiUserName" class="text-primary">-</strong>
                            </div>
                             <div class="mb-1">
                                <label class="text-muted small d-block">User ID</label>
                                <strong id="uiUserId">-</strong>
                            </div>
                             <div class="mb-2">
                                <label class="text-muted small d-block">Balance</label>
                                <strong id="uiAmount" class="text-success fs-5">-</strong>
                            </div>
                            <div class="mb-0">
                                <label class="text-muted small d-block">Signature</label>
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control form-control-sm font-monospace" id="uiSign" readonly style="font-size: 0.7rem;">
                                    <button class="btn btn-outline-secondary" type="button" onclick="navigator.clipboard.writeText(document.getElementById('uiSign').value)">
                                        <i class="bi bi-clipboard"></i> Copy
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Content: Controls -->
                <div class="col-md-9">
                    <!-- Web Address Input -->
                    <div class="input-group mb-2">
                        <span class="input-group-text">Web Address</span>
                        <input type="text" class="form-control" placeholder="Enter URL" id="urlInput" value="https://387vn.com/#/login">
                    </div>
                    
                    <!-- Credentials Input -->
                    <div class="input-group mb-3">
                         <span class="input-group-text">Phone/User</span>
                        <input type="text" class="form-control" placeholder="Username" id="usernameInput" value="369533653">
                        <span class="input-group-text">Password</span>
                        <input type="password" class="form-control" placeholder="Password" id="passwordInput" value="20030410h">
                        <button class="btn btn-success px-4" id="btnPlay">Play & Login</button>
                        <button class="btn btn-danger px-4" id="btnStop">Stop</button>
                    </div>
                    
                    <!-- Status & Game Toggle -->
                     <div class="d-flex justify-content-between align-items-center mb-2 bg-light p-2 rounded">
                        <div>
                            <strong>Status:</strong> <span class="badge bg-secondary" id="statusBadge">Ready</span>
                             <span class="ms-2">|</span>
                            <span class="ms-2">Login:</span> <span class="badge bg-light text-dark border" id="loginStatusBadge">Not Logged In</span>
                        </div>
                         <button class="btn btn-outline-primary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#gameMenuCollapse">
                            Toggle Game Menu
                        </button>
                    </div>

                     <!-- Game Menu Collapse -->
                    <div class="collapse mt-3" id="gameMenuCollapse">
                        <div class="card card-body">
                             <div id="gameCategoriesContainer" class="d-flex flex-wrap gap-2">
                                 <span class="text-muted fst-italic small">Waiting for game list... (Login first)</span>
                             </div>
                        </div>
                    </div>
                    
                    <!-- Game History Panel -->
                    <div class="card border-info mt-3" id="gameHistoryCard" style="display:none;">
                        <div class="card-header bg-info text-white py-1">
                            <span class="fw-bold small">Game History</span>
                        </div>
                         <div class="card-body p-0">
                            <div class="table-responsive" style="max-height: 250px;">
                                <table class="table table-sm table-striped text-center mb-0" style="font-size: 0.85rem;">
                                    <thead class="sticky-top bg-light">
                                        <tr>
                                            <th>Issue</th>
                                            <th>Number</th>
                                            <th>Size</th>
                                            <th>Single/Double</th>
                                            <th>AI Guess</th>
                                            <th>Result</th>
                                        </tr>
                                    </thead>
                                    <tbody id="gameHistoryBody">
                                        <!-- History Items -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- AI Prediction & Extended History -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card shadow-sm border-warning">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-cpu"></i> AI Pattern Analysis & Prediction</h5>
                    <span class="badge bg-dark text-warning" id="aiStatusBadge">Waiting for Data...</span>
                </div>
                <div class="card-body">
                    <!-- AI Session History (Beads) -->
                    <div class="mb-3">
                        <h6 class="text-muted text-uppercase small ls-1 mb-2">AI Performance History (3-Step Chase)</h6>
                        <div id="aiSessionHistory" class="d-flex flex-wrap gap-1 align-items-center p-2 bg-light rounded" style="min-height: 40px;">
                            <span class="text-muted small fst-italic">Waiting for history verify...</span>
                        </div>
                    </div>
                    
                    <!-- Auto Bet Controls -->
                     <div class="mb-3 p-2 border rounded bg-light">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                             <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="autoBetToggle">
                                <label class="form-check-label fw-bold text-danger" for="autoBetToggle">Auto Bet (AI Follow)</label>
                            </div>
                            <span class="badge bg-secondary" id="autoBetStatus">OFF</span>
                        </div>
                        
                        <div class="row g-2">
                            <div class="col-md-6">
                                <label class="small text-muted">Base Amount (VND)</label>
                                <input type="number" id="baseAmountInput" class="form-control form-control-sm" value="1000">
                            </div>
                            <div class="col-md-6">
                                <label class="small text-muted">Martingale Values (BetCount)</label>
                                <input type="text" id="martingaleConfig" class="form-control form-control-sm" value="2,4,8,16,32,64" title="Sequence of multipliers (comma separated)">
                            </div>
                        </div>
                        <div class="mt-1">
                             <small class="text-muted" style="font-size: 0.7rem;">
                                * Logic: Loss -> Next Value. Win -> Reset to First Value.<br/>
                                * Note: Ensure browser is logged in and game is open.
                             </small>
                        </div>
                    </div>
                
                    <div class="row text-center align-items-center">
                        <!-- Next Issue -->
                        <div class="col-md-3 mb-3 mb-md-0 border-end">
                            <h6 class="text-muted text-uppercase small ls-1">Next Issue</h6>
                            <h2 class="fw-bold text-dark font-monospace" id="aiNextIssue">--</h2>
                        </div>
                        
                        <!-- Prediction Display -->
                        <div class="col-md-5 mb-3 mb-md-0 border-end">
                            <h6 class="text-muted text-uppercase small ls-1">AI Prediction</h6>
                            <div class="d-flex justify-content-center align-items-center gap-3">
                                <div>
                                    <span class="d-block text-muted small">Size</span>
                                    <h1 class="fw-bold mb-0" id="aiPredictSize">--</h1>
                                </div>
                                <div class="vr"></div>
                                <div>
                                    <span class="d-block text-muted small">Parity</span>
                                    <h1 class="fw-bold mb-0" id="aiPredictParity">--</h1>
                                </div>
                            </div>
                            <div class="mt-2 text-muted small fst-italic" id="aiReasoning">Analyzing patterns...</div>
                        </div>

                        <!-- Confidence Meter -->
                        <div class="col-md-4">
                            <h6 class="text-muted text-uppercase small ls-1">Confidence</h6>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" 
                                     id="aiConfidenceBar" 
                                     role="progressbar" 
                                     style="width: 0%">0%</div>
                            </div>
                            <small class="text-muted mt-1 d-block">Based on historical streak & pattern analysis</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
